<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Base.Theme.Snowball_plan" parent="Theme.Material3.DayNight.NoActionBar"></style>

    <style name="Theme.Snowball_plan" parent="Base.Theme.Snowball_plan" />

    <!-- 消除边框自带阴影 -->
    <attr name="borderlessButtonStyle" format="reference" />

    <style name="TabLayoutTextSize">
        <item name="android:textSize">20sp</item>
    </style>


    <style name="BuildDialog" parent="android:style/Theme.Dialog">
        <!--        将标题去掉-->
        <item name="android:windowNoTitle">true</item>
        <!--        将背景设置为透明颜色-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--复选框颜色-->
    <style name="CheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/red</item>
    </style>

    <!--日期选择器-->
    <style name="ThemeDialog" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/red</item>
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/grey</item>
<!--        <item name="android:textColorPrimaryInverse">@color/black</item>-->
<!--        <item name="android:textColorPrimary">@color/black</item>-->

<!--        <item name="android:headerBackground">@color/red</item>-->
<!--        <item name="android:yearListSelectorColor">@color/black</item>-->
<!--        <item name="android:yearListItemTextAppearance">@color/black</item>-->
    </style>

    <!--滚动条-->
    <style name="recy_vertical_style">
        <item name="android:scrollbarSize">4dp</item>
        <item name="android:scrollbars">vertical</item>
<!--        短条-->
        <item name="android:scrollbarThumbVertical">@drawable/recy_vertical_scrollbar</item>
<!--        长条-->
        <item name="android:scrollbarTrackVertical">@drawable/tical_scrollbar_bgrecy_ver</item>
    </style>

    <!--日计划中复选框颜色-->
    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@drawable/day_checkbox_not_select</item>
        <item name="colorControlActivated">@drawable/day_checkbox_select</item>
    </style>


</resources>